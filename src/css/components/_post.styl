.post
  $this = selector()
  $c-border = #EFEFEF
  $c-bg = #EFEFEF

  &
    background white
    border 1px solid $c-border
    font-size 14px
    margin 50px 0

    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  &__header
    padding 15px
    display flex
    align-items center
    justify-content space-between

  &__content
    background $c-bg

    img
      display block
      margin auto
      max-width 100%

  &__footer
    padding 15px

  &__author
    display flex
    align-items center

    &-pic
      position relative
      width 30px
      height 30px
      margin-right 8px
      border 1px solid $c-border
      // background $c-bg embedurl('../../img/user.svg') no-repeat center
      background $c-bg
      background-size 60%
      border-radius 50%
      overflow hidden

      > img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        height 100%

    &-name
      font-weight 500

  &__time
    color #909090

  &__comments-list
    list-style-type none
    margin 0 0 10px
    padding 0 0 10px
    border-bottom 1px solid #EFEFEF

    &:last-child
      border-bottom none
      padding-bottom 0
      margin-bottom 0

  &__add-comment
    display block
    flex 1

    input
      display block
      width 100%
      border none
      padding 0
      height 32px
      font inherit
      outline none

  &__like
    background none
    border none
    line-height 1
    padding 0
    height 32px
    margin-right 10px
    font-size 10px
    outline none

    > *
      vertical-align middle

    .fa
      font-size 18px
      margin-right 4px

      &:last-child
        margin-right 0

    .fa-heart
      color red

  &__delete
    margin-left 10px


.comment
  $this = selector()

  &
    margin-top 8px
    > *
      display inline-block
      vertical-align baseline

  &:first-child
    margin-top 0

  &__author
    font-weight 500

  &__text
    font-weight 400
    color #555

  &__time
    font-size 12px
    font-style italic
    color #CCC

  &__delete
    border none
    background none
    padding 5px
    margin -5px
    color #A94442
    visibility hidden
    opacity 0
    transition all 0.2s ease 0s
    outline none

  &:hover
    {$this}__delete
      visibility visible
      opacity 1
      transition-delay 0.2s

